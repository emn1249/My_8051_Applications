SEG_ON EQU P1.6
F_CSDS EQU 0FF30H	
F_CSDB EQU 0000_0001	
	
	LJMP START
	ORG 100H
START:
	LCALL LCD_CLR
	SETB P3.5
	SETB P1.6
	MOV TMOD ,#60H
	MOV TL1,#00
	MOV TH1,#00
	SETB TR1
	
DONGU:
	LCALL LCD_CLR
	MOV DPTR,#F_CSDS
	MOV A,F_CSDB
	MOVX @DPTR,A
	
	MOV A,TL1
	LCALL WRITE_HEX
	MOV A,#10
	LCALL DELAY_100MS
	
	
	SJMP DONGU
	LJMP START
	
	NOP

	
	RET	